<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="WebSocketClient.Pages.SettingPage"
			 Title="SettingPage">
    <StackLayout Padding="20">
        <Label Text="Settings" FontSize="24" HorizontalOptions="Center" />

        <!-- 사용자 ID 입력 -->
        <Label Text="User ID:" />
        <Entry x:Name="UserIdEntry" Placeholder="Enter user ID" />

        <!-- 비밀번호 입력 -->
        <Label Text="Password:" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True" />

        <!-- 설정 저장 버튼 -->
        <Button Text="Save" Clicked="OnSaveButtonClicked" />

        <!-- 저장 성공 또는 실패 메시지 -->
        <Label x:Name="StatusMessage" TextColor="Green" IsVisible="False" />
    </StackLayout>
</ContentPage>
   